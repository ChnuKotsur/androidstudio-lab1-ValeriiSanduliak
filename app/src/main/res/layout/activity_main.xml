<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewBackround"
        android:layout_width="537dp"
        android:layout_height="783dp"

        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mandarin" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="394dp"
        android:layout_height="117dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="614dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewFlag"
            android:layout_width="163dp"
            android:layout_height="110dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/saintvincentflag" />

        <TextView
            android:id="@+id/textTop"
            android:layout_width="233dp"
            android:layout_height="113dp"
            android:layout_marginStart="160dp"
            android:gravity="center"
            android:text="@string/saint_vincent"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/textViewAnthem"
        android:layout_width="382dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="440dp"
        android:gravity="center"
        android:text="@string/anthemSaint"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/switchCountryButton"
        android:layout_width="235dp"
        android:layout_height="63dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="296dp"
        android:backgroundTint="#20B2AA"
        android:onClick="onClickSwitchCountry"
        android:text="Switch Country"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="188dp"
        android:entries="@array/countries"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/message"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="595dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="88dp"
        android:ems="10"
        android:hint="@string/hint"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send"
        android:layout_width="122dp"
        android:layout_height="57dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="652dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="22dp"
        android:onClick="onSendMessage"
        android:text="@string/send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendOtherApp"
        android:layout_width="194dp"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="652dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="19dp"
        android:onClick="onSendMessageOther"
        android:text="@string/sendOtherApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>